<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoffeeBase"
           parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/coffeeBrown</item>
        <item name="colorPrimaryVariant">@color/coffeeBrownVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryCoffee</item>
        <item name="colorSecondaryVariant">@color/secondaryCoffeeVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CoffeeBase.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CoffeeBase.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.CoffeeBase.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ImageView.Corner" parent="">
        <item name="cornerSize">20%</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>
